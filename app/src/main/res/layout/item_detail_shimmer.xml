<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/shimmer_title"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/shimmer_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/shimmer_organizer_label"
        android:layout_width="80dp"
        android:layout_height="16dp"
        android:layout_marginTop="24dp"
        android:background="@color/shimmer_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmer_title" />

    <View
        android:id="@+id/shimmer_organizer"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:background="@color/shimmer_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/shimmer_organizer_label"
        app:layout_constraintTop_toTopOf="@id/shimmer_organizer_label" />

    <View
        android:id="@+id/shimmer_date_label"
        android:layout_width="80dp"
        android:layout_height="16dp"
        android:layout_marginTop="12dp"
        android:background="@color/shimmer_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmer_organizer_label" />

    <View
        android:id="@+id/shimmer_date"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:background="@color/shimmer_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/shimmer_date_label"
        app:layout_constraintTop_toTopOf="@id/shimmer_date_label" />

    <View
        android:id="@+id/shimmer_quota_label"
        android:layout_width="80dp"
        android:layout_height="16dp"
        android:layout_marginTop="12dp"
        android:background="@color/shimmer_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmer_date_label" />

    <View
        android:id="@+id/shimmer_quota"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:background="@color/shimmer_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/shimmer_quota_label"
        app:layout_constraintTop_toTopOf="@id/shimmer_quota_label" />

    <View
        android:id="@+id/shimmer_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="@color/divider"
        app:layout_constraintTop_toBottomOf="@id/shimmer_quota_label" />

    <View
        android:id="@+id/shimmer_description_label"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginTop="24dp"
        android:background="@color/shimmer_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmer_divider" />

    <View
        android:id="@+id/shimmer_description_line1"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/shimmer_color"
        app:layout_constraintTop_toBottomOf="@id/shimmer_description_label" />

    <View
        android:id="@+id/shimmer_description_line2"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/shimmer_color"
        app:layout_constraintTop_toBottomOf="@id/shimmer_description_line1" />

    <View
        android:id="@+id/shimmer_description_line3"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/shimmer_color"
        app:layout_constraintTop_toBottomOf="@id/shimmer_description_line2" />

    <View
        android:id="@+id/shimmer_description_line4"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/shimmer_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shimmer_description_line3"
        app:layout_constraintWidth_percent="0.7" />

</androidx.constraintlayout.widget.ConstraintLayout>